<script>
    var fruitname = prompt("Which fruit do you want?");
    switch (fruitname){
        case 'Orange':
            console.log('Rs.60 per kg');
            break;
        case 'Guava':
            console.log('Rs.50 per kg');
            break;
        case 'Mango':
            console.log('Rs.40 per kg');
            break;
        case 'Banana':
            console.log('Rs.60 per dozen');
            break;
        case 'Papaya':
            console.log('Rs.50 per kg');
            break;
        default:
            console.log(`${fruitname} it is not available today.`);
    }
    console.log("anything want, Sir ?");
</script>
</html>
