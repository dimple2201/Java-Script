<script>
    // Naming Conventions

    // camelCase
    let firstName = "Vishal";
    // PascalCase
    let MiddleName = "Singh";
    // snake_case
    let last_name = "Rawat";

    // Using Constant (const keyword)
    const price = 99;

    // Course Name(String datatype)
    var courseName = "Web Development Full Stack Course";

    // Card Number (Number datatype)
