    <h3>Reverse No. 9 to 0-:</h3>
    <SCRIPT>
        for (let i = 2; i < 21; i = i+2){
            console.log(` 2 * 1 = ${i}`)
        }
        for (let i = 0; i <= 10; i++){
            if (i % 2 == 0)
            console.log(`Even No. ${i}`)
        }
        var num = prompt("Enter the number");
        var i = 1;
        while (i <= 10)
        {
            console.log(`${num} * ${i} = ${num*i}`);
            i++;
        }
        var i = 9;
        do {
            console.log(i);
            i--;
        } while (i >= 0);
    </SCRIPT>
